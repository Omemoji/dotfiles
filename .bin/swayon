#!/bin/sh

XDG_SESSION_TYPE=wayland
XDG_CURRENT_DESKTOP=sway
XDG_CURRENT_SESSION=sway
# XDG_RUNTIME_DIR=/tmp
DESKTOP_SESSION=sway
QT_QPA_PLATFORM="wayland;xcb"
# GDK_DPI_SCALE=1
# QT_SCALE_FACTOR=1
MOZ_ENABLE_WAYLAND=1
# MOZ_DBUS_REMOTE=1
WINIT_UNIX_BACKEND=x11
XDG_SCREENSHOTS_DIR=$HOME/Pictures/screenshots
LIBSEAT_BACKEND=logind

export XDG_SESSION_TYPE XDG_CURRENT_DESKTOP XDG_CURRENT_SESSION DESKTOP_SESSION LIBSEAT_BACKEND QT_QPA_PLATFORM MOZ_ENABLE_WAYLAND WINIT_UNIX_BACKEND XDG_SCREENSHOTS_DIR

export QT_IM_MODULE=fcitx
export GTK_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx
export XCURSOR_PATH=${XCURSOR_PATH}:~/.icons

if [ -z "${WAYLAND_DISPLAY}" ] && [ "${XDG_VTNR}" -eq 1 ]; then
    # /usr/bin/pipewire &
    # /usr/bin/pipewire-pulse &
    exec dbus-run-session sway
fi
