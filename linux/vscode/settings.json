{
  "editor.fontFamily": "'MesloLGS NF'",
  "security.workspace.trust.enabled": false,
  "workbench.colorTheme": "Kanagawa Wave",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.confirmSync": false,
  "editor.formatOnSave": true,
  "workbench.startupEditor": "none",
  "python.pythonPath": "python3",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotVerifyTags": true,
  "jupyter.askForKernelRestart": false,
  "workbench.iconTheme": "vscode-icons",
  "editor.wordWrap": "on",
  "code-runner.executorMap": {
    "python": "/usr/bin/python3"
  },
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "python.defaultInterpreterPath": "python3",
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "explorer.confirmDelete": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ISO": "hexEditor.hexedit",
    "*.bin": "hexEditor.hexedit",
    "*.exe": "hexEditor.hexedit",
    "*.swp": "hexEditor.hexedit"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.hover.enabled": false,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "open-in-browser.default": "google-chrome",
  "liveServer.settings.CustomBrowser": "chrome",
  "livePreview.customExternalBrowser": "Chrome",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "files.associations": {
    ".Xresources": "yaml",
    "*.mdx": "markdown"
  },
  "git.openRepositoryInParentFolders": "never",
  "[go]": {
    "editor.tabSize": 2, // 公式のサイズは不明。2か4
    "editor.insertSpaces": false, // Go公式はスペースでなくタブ
    "editor.formatOnSave": true, // ファイル保存時にフォーマット
    "editor.defaultFormatter": "golang.go" // 変える
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editor.empty.hint": "hidden",
  "remote.SSH.configFile": "~/.ssh/config",
  "remote.SSH.useLocalServer": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false,
  "markdown.marp.enableHtml": true,
  "markdown-pdf.displayHeaderFooter": false,
  "terminal.integrated.commandsToSkipShell": ["language-julia.interrupt"],
  "julia.symbolCacheDownload": true,
  "julia.executablePath": "~/.juliaup/bin/julia",
  "julia.enableTelemetry": false,
  "cmake.showOptionsMovedNotification": false,
  "terminal.integrated.experimentalImageSupport": true,
  "markdown.marp.themes": [
    "https://raw.githubusercontent.com/omemoji/marp-theme-academic-omemoji/main/themes/academic.css"
  ],
  "markdown-preview-enhanced.hideDefaultVSCodeMarkdownPreviewButtons": false,
  "github.copilot.preferredAccount": "omemoji",
  "remote.SSH.remotePlatform": {
    "gcp": "linux"
  },
  "makefile.configureOnOpen": false,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  }
}
