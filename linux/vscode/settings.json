{
  "editor.fontFamily": "'MesloLGS NF'",
  "security.workspace.trust.enabled": false,
  "workbench.colorTheme": "Monokai",
  "liveServer.settings.donotShowInfoMsg": true,
  "git.confirmSync": false,
  "editor.formatOnSave": true,
  "workbench.startupEditor": "none",
  "python.pythonPath": "python3",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotVerifyTags": true,
  "jupyter.askForKernelRestart": false,
  "workbench.iconTheme": "vscode-icons",
  "editor.wordWrap": "on",
  "code-runner.executorMap": {
    "python": "/usr/bin/python3"
  },
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "python.defaultInterpreterPath": "python3",
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "explorer.confirmDelete": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ISO": "hexEditor.hexedit",
    "*.bin": "hexEditor.hexedit",
    "*.exe": "hexEditor.hexedit",
    "*.swp": "hexEditor.hexedit"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.hover.enabled": false,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "redhat.telemetry.enabled": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "open-in-browser.default": "google-chrome",
  "liveServer.settings.CustomBrowser": "chrome",
  "livePreview.customExternalBrowser": "Chrome",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "files.associations": {
    ".Xresources": "yaml",
    "*.css": "tailwindcss"
  },
  "git.openRepositoryInParentFolders": "never",
  "[go]": {
    "editor.tabSize": 2, // 公式のサイズは不明。2か4
    "editor.insertSpaces": false, // Go公式はスペースでなくタブ
    "editor.formatOnSave": true, // ファイル保存時にフォーマット
    "editor.defaultFormatter": "golang.go" // 変える
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.venvFolders": ["venv"],
  "workbench.editor.empty.hint": "hidden",
  "terminal.integrated.sendKeybindingsToShell": true
}
